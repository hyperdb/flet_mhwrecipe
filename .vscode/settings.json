{
    "workbench.colorTheme": "Bearded Theme Black & Emerald",
    "workbench.editor.tabCloseButton": "left", // タブのCLOSEボタンの位置
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#1f3134",
        "statusBar.foreground": "#f2f2b0",
        "titleBar.activeBackground": "#1f3134",
        "titleBar.activeForeground": "#f2f2b0",
        "titleBar.inactiveBackground": "#1f3134",
    },
    // cf. https://qiita.com/kgoto/items/265e3eb8a82778e33cfe
    "editor.renderWhitespace": "boundary", // 空白文字を表示する
    "editor.smoothScrolling": true, // スクロールを滑らかにする。
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?", // $を含んで変数を選択したい
    // cf. https://qiita.com/yoshinyan/items/fe693a3e977f6f4a2fec
    "editor.fontFamily": "'Cascadia Code','UDEV Gothic 35'",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "normal",
    "editor.lineHeight": 19,
    "editor.letterSpacing": -0.4,
    "[markdown]": {
        "editor.fontFamily": "'Inter','InGen UI N'",
        "editor.fontSize": 14,
        "editor.fontWeight": "normal",
        "editor.lineHeight": 24,
        "editor.letterSpacing": 1,
    },
    "[plaintext]": {
        "editor.fontFamily": "'Cascadia Code','UDEV Gothic 35'",
        "editor.fontSize": 13,
        "editor.fontWeight": "normal",
        "editor.lineHeight": 21,
        "editor.letterSpacing": 1,
        "editor.wordWrap": "on",
    },
    "terminal.integrated.fontFamily": "'Cascadia Code','UDEV Gothic 35'",
    "terminal.integrated.fontSize": 12,
    // 拡張機能：GlassIt-VSC｜背景の透過設定
    "glassit.alpha": 248,
    // 拡張機能：markdownint｜チェック設定
    "markdownlint.config": {
        "accessibility": true,
        "default": true,
        "MD002": false,
        "MD007": {
            "indent": 4
        },
        "MD009": false,
        "MD024": false,
        "MD032": false,
        "MD033": false,
        "MD041": false,
        "MD025": {
            "front_matter_title": ""
        }
    },
    "markdown.extension.tableFormatter.enabled": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.temp": true,
    },
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/assets/css"
        }
    ],
    "liveSassCompile.settings.excludeList": [ //対象外とするフォルダを指定
        "/**/node_modules/**",
        "/.vscode/**",
        "/.history/**"
    ],
    "liveSassCompile.settings.autoprefix": [ //ベンダープレフィックスの指定
        "last 2 versions",
        "ie >= 11",
        "Android >= 4",
        "ios_saf >= 8"
    ],
    "python.formatting.autopep8Args": [
        "–max-line-length=500"
    ],
    /*
     *
     */
    "csv-edit.fontSizeInPx": 13,
    "workbench.editor.tabActionLocation": "left"
}